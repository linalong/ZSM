<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!--<item name="android:windowAnimationStyle">@style/Animation_Activity</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowContentOverlay">@android:color/transparent</item>-->
        <!--<item name="android:windowBackground">@color/white</item>-->
        <!--<item name="android:windowAnimationStyle">@style/Animation.Activity.Translucent.Style</item>-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <!-- Application theme. -->
    <style name="AppThemeAppCompat" parent="Theme.AppCompat">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>


    <style name="MainTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="Animation.Activity.Translucent.Style" parent="@android:style/Animation.Translucent">
        <!--<item name="android:windowEnterAnimation">@anim/right_in_anim</item>-->
        <!--<item name="android:windowExitAnimation">@anim/right_out_anim</item>-->
        <item name="android:activityOpenEnterAnimation">@anim/right_in_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/right_out_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/right_in_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out_anim</item>
    </style>


    <style name="Animation_Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right_in_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/right_out_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/right_in_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out_anim</item>
    </style>

    <!-- TabPageIndicator的样式 -->

    <!--<style name="StyledIndicators" parent="@style/AppTheme">-->
    <!--<item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>-->
    <!--<item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>-->
    <!--</style>-->

    <style name="diviling_line_fine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray2</item>
    </style>

    <style name="diviling_line_fine_black">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/red</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popwindow_display</item>
        <item name="android:windowExitAnimation">@anim/popwindow_gone</item>
    </style>

    <style name="main_tab_bottom2">
        <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:paddingTop">@dimen/bottom_tab_padding_up</item>
        <item name="android:paddingBottom">@dimen/bottom_tab_padding_up</item>
        -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/black2</item>
    </style>

    <style name="stu_btn_style_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_blue</item>
    </style>


    <style name="stu_btn_style_blue_hollow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:textColor">@color/blue1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_blue_hollow</item>
    </style>

    <style name="stu_btn_style_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_gray</item>
    </style>

    <style name="et_style_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/et_common_bg</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="et_style_login">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColorHint">@color/gray1</item>
        <item name="android:textSize">@dimen/textsize_3</item>
        <item name="android:background">@drawable/et_common_bg</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="et_style_noline">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:drawableBottom">@null</item>
        <item name="android:textColorHint">@color/gray1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="login_et_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/black4</item>
        <item name="android:textColorHint">@color/gray9</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/login_et_bg</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="check_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_selector</item>
    </style>

    <style name="stu_ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating</item>
        <item name="android:minHeight">17dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxHeight">17dp</item>
    </style>

    <style name="stu_ratingBar2" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_big</item>
        <item name="android:minHeight">27dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxHeight">27dp</item>
    </style>

    <style name="stu_ratingSmile" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_smile</item>
        <item name="android:minHeight">27dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxHeight">27dp</item>
    </style>

    <style name="updateDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000099</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


</resources>