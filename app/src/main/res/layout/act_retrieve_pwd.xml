<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/include_title"></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/include">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/et_phone"
                    style="@style/et_style_login"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@mipmap/iv_suo"
                    android:drawablePadding="20dp"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11" />


                <RelativeLayout
                    android:id="@+id/view_orders"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_verification_code"
                        style="@style/et_style_login"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="20dp"
                        android:hint="请输入验证码"
                        android:inputType="textVisiblePassword"
                        android:maxLength="6"
                        android:paddingLeft="35dp"
                        android:paddingTop="10dp" />

                    <Button
                        android:id="@+id/btn_get_code"
                        android:layout_width="100dp"
                        android:layout_height="33dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@color/gray9"
                        android:enabled="true"
                        android:gravity="center"
                        android:text="@string/register_get_code"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/et_pwd"
                        style="@style/et_style_login"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@mipmap/iv_suo"
                        android:drawablePadding="20dp"
                        android:hint="请设置登陆密码4-12位"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:textColor="@color/black2"
                        android:textColorHint="@color/gray10"
                        android:visibility="visible" />

                </RelativeLayout>



            </LinearLayout>


            <Button
                android:id="@+id/btn_ok"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_common_bg"
                android:enabled="true"
                android:text="确    定"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>